<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layer_list_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingStart="15dp">

            <!--点击显示个人信息-->
            <LinearLayout
                android:id="@+id/ll_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.boyuanitsm.zhetengba.view.CircleImageView
                    android:id="@+id/iv_headphoto"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <!--昵称-->
                <TextView
                    android:text="hahhhhhhh"
                    android:id="@+id/tv_niName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:textColor="#5fa67d"
                    android:textSize="12sp" />

                <!--性别-->
                <ImageView
                    android:id="@+id/iv_gender"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_show2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="55dp">

            <!--活动主题-->
            <TextView
                android:id="@+id/tv_hdtheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:textColor="@color/one_color"
                android:textSize="14sp" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/ll_show3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingTop="10dp"
                android:id="@+id/ll_theme_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="50dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/location" />

                <!--活动地点-->
                <TextView
                    android:text="上海市徐汇区徐家汇"
                    android:id="@+id/tv_loaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/simple_item_loaction"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_below="@id/ll_theme_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="50dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/time" />

                <!--活动时间-->
                <TextView
                    android:text="11月17日18:30-11月17日18:30"
                    android:id="@+id/tv_date"
                    style="@style/MainAct_simple_Text"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp" />
            </LinearLayout>


            <!--</LinearLayout>-->
            <!--</FrameLayout>-->
            <LinearLayout
                android:layout_marginTop="8dp"
                android:id="@+id/ll_guanzhu"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_simple_guanzhu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/collect_c" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/act_layer_right">


                <LinearLayout
                    android:id="@+id/ll_yaoqin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp"
                    >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/yaoqing" />

                    <TextView
                        style="@style/MainAct_simple_Text"
                        android:paddingLeft="10dp"
                        android:text="邀请" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp">


                    <ImageView
                        android:id="@+id/iv_join"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/add" />

                    <TextView
                        android:id="@+id/tv_text_jion"
                        style="@style/MainAct_simple_Text"
                        android:paddingLeft="10dp"
                        android:text="参加" />

                    <TextView
                        android:id="@+id/tv_join_num"
                        style="@style/MainAct_simple_Text"
                        android:paddingLeft="12dp"
                        android:text="15" />

                    <TextView
                        style="@style/MainAct_simple_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="/" />

                    <TextView
                        android:id="@+id/tv_join_tal_num"
                        style="@style/MainAct_simple_Text"
                        android:text="15" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.boyuanitsm.zhetengba.view.CircleImageView
        android:id="@+id/iv_actdetial"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp" />

</RelativeLayout>