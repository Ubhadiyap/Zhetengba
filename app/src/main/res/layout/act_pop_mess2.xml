<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">
    <LinearLayout
        android:layout_gravity="right"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical"
        android:layout_width="108dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_stroke">

        <LinearLayout
            android:id="@+id/ll_sao"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/saowhite"/>
            <TextView
                android:layout_marginLeft="11dp"
                android:textColor="#fff"
                android:text="扫一扫"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_marginLeft="0dp"
            style="@style/view_line"></View>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_qunavatar"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/act_layer_bottom_white">

            <!--<ImageView-->
            <!--android:background="@drawable/qun_ava"-->
            <!--android:layout_width="22dp"-->
            <!--android:layout_height="22dp" />-->

            <ImageView
                android:background="@drawable/qun"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <TextView
                style="@style/mess_pop_window_text"
                android:text="建立群聊"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_friend"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/ad"
                android:layout_width="22dp"
                android:layout_height="22dp" />
            <TextView
                style="@style/mess_pop_window_text"
                android:text="添加好友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>