<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/act_layer_top_bottom"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">
            <!--头像-->
            <com.boyuanitsm.zhetengba.view.CircleImageView
                android:id="@+id/iv_ch_head"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
                <!--昵称-->
            <TextView
                android:id="@+id/tv_ch_niName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="14sp" />
                <!--性别-->
            <ImageView
                android:id="@+id/iv_ch_gendar"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="4分钟前"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="65dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/content"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:text="相伴到老。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_cir_name"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:text="户外圈"
                    android:background="@drawable/bg_circle_stroke_red"
                    android:layout_width="60dp"
                    android:layout_height="18dp" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llphoto"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.boyuanitsm.zhetengba.view.MyGridView
                    android:id="@+id/iv_ch_image"
                    android:paddingBottom="3dp"
                    android:horizontalSpacing="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/ll_two"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.boyuanitsm.zhetengba.view.CustomImageView
                            android:id="@+id/iv_two_one"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_width="83dp"
                            android:layout_height="83dp" />
                        <com.boyuanitsm.zhetengba.view.CustomImageView
                            android:layout_marginLeft="3dp"
                            android:id="@+id/iv_two_two"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_width="83dp"
                            android:layout_height="83dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.boyuanitsm.zhetengba.view.CustomImageView
                            android:id="@+id/iv_two_three"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_width="83dp"
                            android:layout_height="83dp" />
                        <com.boyuanitsm.zhetengba.view.CustomImageView
                            android:layout_marginLeft="3dp"
                            android:id="@+id/iv_two_four"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_width="83dp"
                            android:layout_height="83dp" />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_oneimage"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/act_layer_top_bottom">

        <LinearLayout
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/layer_list_bottom_yell"
            android:gravity="center">

            <TextView
                android:id="@+id/commentNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="评论50"
                android:textColor="#333333" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
