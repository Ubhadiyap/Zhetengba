<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
   android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/title_act_layout"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_phone"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="请输入手机号"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_toRightOf="@+id/tv_phone"
            android:layout_toLeftOf="@+id/code_tv"
            android:layout_centerVertical="true"
            android:id="@+id/et_phone"
            android:textColorHint="#cdcdcd"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            />
        <TextView
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="获取验证码"
            android:textColor="@color/com_btn_nor"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:background="#dcdcde"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>
    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:visibility="gone"
            android:inputType="textPassword"
            android:textColorHint="#cdcdcd"
            android:paddingBottom="15dp"
            android:gravity="bottom"
            android:id="@+id/et_aqm"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入安全码"
            android:maxLength="6"
            android:singleLine="true" />

        <ImageView
            android:visibility="gone"
            android:src="@mipmap/yzmjiazai"
            android:id="@+id/iv_aqm"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <View
        android:layout_marginLeft="15dp"
        android:background="#dcdcde"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>



    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_centerVertical="true"
            android:text="请输入验证码"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textColorHint="#cdcdcd"
            android:paddingBottom="15dp"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:id="@+id/et_yzm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true" />

    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:background="#dcdcde"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:text="重新设置密码"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_pwd"
        android:textColorHint="#cdcdcd"
        android:paddingBottom="15dp"
        android:layout_marginLeft="10dp"
        android:gravity="bottom"
        android:textSize="16sp"
        android:textColor="#333333"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:maxLength="24"
        android:singleLine="true"
        />
</LinearLayout>

    <View
        android:layout_marginLeft="15dp"
        android:background="#dcdcde"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="再次确认密码"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_cpwd"
            android:textColorHint="#cdcdcd"
            android:paddingBottom="15dp"
            android:gravity="bottom"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:maxLength="24"
            android:singleLine="true"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="15dp"
        android:background="#dcdcde"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>


    <TextView
        android:id="@+id/tv_frogettj"
        style="@style/com_button"
        android:layout_marginTop="30dp"
        android:text="提交"
         />


</LinearLayout>