<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    >
    <include layout="@layout/title_act_layout"></include>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:paddingRight="15dp">

        <TextView
            style="@style/tv_second"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="添加我时需要验证"
            android:textColor="#333333"
             />

        <com.boyuanitsm.zhetengba.widget.ToggleButton
            android:id="@+id/tb_verification"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:borderWidth="1px"
            app:offBorderColor="#e7e7e7"
            app:offColor="#f5f5f5"
            app:onColor="#4dd963"
            app:spotColor="#fff" />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.boyuanitsm.zhetengba.view.CommonView
            android:id="@+id/cv_about"
            app:desTextColor="#333333"
            app:desTextSize="14sp"
            app:isShowCategoryImage="false"
            app:desText="关于折腾吧"
            android:layout_width="match_parent"
            android:layout_height="41dp"></com.boyuanitsm.zhetengba.view.CommonView>

        <com.boyuanitsm.zhetengba.view.CommonView
            android:id="@+id/cv_feedback"
            app:desTextColor="#333333"
            app:desTextSize="14sp"
            app:isShowCategoryImage="false"
            app:desText="反馈"
            android:layout_width="match_parent"
            android:layout_height="41dp"></com.boyuanitsm.zhetengba.view.CommonView>

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.boyuanitsm.zhetengba.view.CommonView
            android:id="@+id/cv_checkUpdate"
            app:desTextColor="#333333"
            app:desTextSize="14sp"
            app:isShowCategoryImage="false"
            app:desText="检查更新"
            android:layout_width="match_parent"
            android:layout_height="41dp"></com.boyuanitsm.zhetengba.view.CommonView>

        <com.boyuanitsm.zhetengba.view.CommonView
            android:id="@+id/cv_clearCache"
            app:desTextColor="#333333"
            app:desTextSize="14sp"
            app:isShowCategoryImage="false"
            app:desText="清理缓存"
            android:layout_width="match_parent"
            android:layout_height="41dp"></com.boyuanitsm.zhetengba.view.CommonView>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="41dp">
        <TextView
            android:id="@+id/tv_signOut"
            android:textColor="#333333"
            android:text="退出当前账号"
            style="@style/tv_second"
             />


    </LinearLayout>






</LinearLayout>