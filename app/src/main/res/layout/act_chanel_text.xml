<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/title_act_layout"></include>
    <LinearLayout
        android:layout_marginTop="48dp"
        android:layout_marginBottom="45dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/sl_chanel"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/act_layer_top_bottom"
                android:orientation="vertical"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_ch_head"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/test_user" />

                    <TextView
                        android:id="@+id/tv_ch_niName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="甜蜜的小猫"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_ch_gendar"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/female" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:text="4分钟前"
                            android:textColor="#999999"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="下午一起畅谈诗歌和远方下午一起畅谈诗歌和远方下午一起畅谈诗歌和远方下午一起畅谈诗歌和远方下午一起畅谈诗歌和远方下午一起畅谈诗歌和远方下午一起畅谈诗歌和远方"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <com.boyuanitsm.zhetengba.view.MyGridView
                            android:id="@+id/iv_ch_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:horizontalSpacing="3dp"
                            android:paddingBottom="3dp" />

                        <LinearLayout
                            android:id="@+id/ll_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:orientation="horizontal">

                                <com.boyuanitsm.zhetengba.view.CustomImageView
                                    android:id="@+id/iv_two_one"
                                    android:layout_width="83dp"
                                    android:layout_height="83dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY" />

                                <com.boyuanitsm.zhetengba.view.CustomImageView
                                    android:id="@+id/iv_two_two"
                                    android:layout_width="83dp"
                                    android:layout_height="83dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.boyuanitsm.zhetengba.view.CustomImageView
                                    android:id="@+id/iv_two_three"
                                    android:layout_width="83dp"
                                    android:layout_height="83dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY" />

                                <com.boyuanitsm.zhetengba.view.CustomImageView
                                    android:id="@+id/iv_two_four"
                                    android:layout_width="83dp"
                                    android:layout_height="83dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY" />
                            </LinearLayout>


                        </LinearLayout>

                        <com.boyuanitsm.zhetengba.view.CustomImageView
                            android:id="@+id/ng_one_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/act_layer_top_bottom">

                <LinearLayout
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/layer_list_bottom_yell"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="评论50"
                        android:textColor="#333333" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.leaf.library.widget.MyListView
                    android:id="@+id/my_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#e1e1e1"
                    android:dividerHeight="1px"></com.leaf.library.widget.MyListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_comment"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/main_color">
        <!--<EditText-->
            <!--android:id="@+id/et_comment"-->
            <!--android:gravity="center_vertical"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:layout_marginTop="2dp"-->
            <!--android:layout_marginBottom="2dp"-->
            <!--android:layout_weight="1"-->
            <!--android:hint="评论内容 "-->
            <!--android:textColor="#666666"-->
            <!--android:maxLines="3"-->
            <!--android:textSize="12sp"-->
            <!--android:background="@drawable/act_layer_top_bottom"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent" />-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comment"/>
        <Button
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="评论"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>