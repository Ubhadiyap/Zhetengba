<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">
    <include layout="@layout/title_act_layout"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:background="@drawable/act_layer_top_bottom">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_ch_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/test_user" />

        <TextView
            android:id="@+id/tv_ch_niName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="甜蜜的小猫"
            android:textColor="#666666"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_ch_gendar"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/female" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="right"
                android:id="@+id/tv_time"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4分钟前"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="65dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="下午一起畅谈诗歌和远方"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.boyuanitsm.zhetengba.view.CircleImageView
                android:id="@+id/iv_ch_image"
                android:layout_width="250dp"
                android:layout_height="125dp"
                android:background="@drawable/test_chanel"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/act_layer_top_bottom">
            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="评论50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <LinearLayout

                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="赞20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.leaf.library.widget.MyListView
                android:id="@+id/my_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1px"
                android:divider="@color/bg_color">
            </com.leaf.library.widget.MyListView>
        </LinearLayout>
<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/layer_list_top_white">
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:background="@drawable/act_layer_right">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/comment"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="#666666"
            android:text="转发"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:background="@drawable/act_layer_right">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/comment"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="评论"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="20dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/zan"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="赞"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>