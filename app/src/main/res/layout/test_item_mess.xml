<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_test_cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_list_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingStart="15dp">

                <!--点击显示个人信息-->
                <LinearLayout
                    android:id="@+id/ll_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_headphoto"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/test_user" />

                    <TextView
                        android:id="@+id/tv_niName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="甜蜜的小猫"
                        android:textColor="#5fa67d"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_gender"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/female" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_show"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_show2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="55dp">

                <TextView
                    android:id="@+id/tv_hdtheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"

                    android:text="下午一起去苏浙汇吃饭"
                    android:textColor="@color/one_color"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_show3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_theme_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/location" />

                        <TextView
                            android:id="@+id/tv_loaction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:text="汤全国际"
                            android:textColor="@color/simple_item_loaction"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/tv_show2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@drawable/time" />

                        <TextView
                            android:id="@+id/tv_date"
                            style="@style/MainAct_simple_Text"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:text="3月6日 15：00—18：30" />
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/act_layer_right">


                    <LinearLayout
                        android:paddingLeft="50dp"
                        android:id="@+id/ll_guanzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_simple_guanzhu"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/collect" />

                        <TextView
                            android:id="@+id/tv_guanzhu"
                            style="@style/MainAct_simple_Text"
                            android:paddingLeft="10dp"

                            android:text="关注" />

                        <TextView
                            android:id="@+id/tv_guanzhu_num"
                            style="@style/MainAct_simple_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="57" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_join"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="30dp">


                        <ImageView
                            android:id="@+id/iv_join"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/add" />

                        <TextView
                            android:id="@+id/tv_text_jion"
                            style="@style/MainAct_simple_Text"
                            android:paddingLeft="10dp"
                            android:text="参加" />

                        <TextView
                            android:id="@+id/tv_join_num"
                            style="@style/MainAct_simple_Text"
                            android:paddingLeft="12dp"
                            android:text="15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MainAct_simple_Text"
                            android:gravity="center"
                            android:text="/" />

                        <TextView
                            android:id="@+id/tv_join_tal_num"
                            style="@style/MainAct_simple_Text"
                            android:text="15" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_actdetial"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/test_01" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_test_cir"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_ch_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/test_user" />

            <TextView
                android:id="@+id/tv_ch_niName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="甜蜜的小猫"
                android:textColor="#666666"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_ch_gendar"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/female" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="right"
                    android:id="@+id/tv_time"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4分钟前"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="65dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:text="最美好的结局就是，你成为了我的责任，而我成为了你的守护，如此相守一生，相伴到老。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_cir_name"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:text="户外圈"
                    android:background="@drawable/bg_circle_stroke_red"
                    android:layout_width="60dp"
                    android:layout_height="18dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"

                android:orientation="vertical"
                android:layout_width="260dp"
                android:layout_height="wrap_content">
                <com.boyuanitsm.zhetengba.view.MyGridView
                    android:id="@+id/iv_ch_image"
                    android:paddingBottom="3dp"
                    android:horizontalSpacing="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/ll_two"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.boyuanitsm.zhetengba.view.CustomImageView
                            android:id="@+id/iv_two_one"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_width="83dp"
                            android:layout_height="83dp" />
                        <com.boyuanitsm.zhetengba.view.CustomImageView
                            android:layout_marginLeft="3dp"
                            android:id="@+id/iv_two_two"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_width="83dp"
                            android:layout_height="83dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.boyuanitsm.zhetengba.view.CustomImageView
                            android:id="@+id/iv_two_three"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_width="83dp"
                            android:layout_height="83dp" />
                        <com.boyuanitsm.zhetengba.view.CustomImageView
                            android:layout_marginLeft="3dp"
                            android:id="@+id/iv_two_four"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_width="83dp"
                            android:layout_height="83dp" />
                    </LinearLayout>


                </LinearLayout>
                <com.boyuanitsm.zhetengba.view.CustomImageView
                    android:id="@+id/iv_oneimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/act_layer_right">
                <ImageView
                    style="@style/Chanel_Small_Image"
                    android:background="@drawable/zan"/>
                <TextView
                    style="@style/Chanel_Small_Text"
                    android:text="赞"/>
                <TextView
                    style="@style/Chanel_Small_Text"
                    android:text="(240)" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_comment"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/act_layer_right">
                <ImageView
                    style="@style/Chanel_Small_Image"
                    android:background="@drawable/comment"/>
                <TextView
                    style="@style/Chanel_Small_Text"
                    android:text="评论"/>
                <TextView
                    style="@style/Chanel_Small_Text"
                    android:text="(240)" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_share"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    style="@style/Chanel_Small_Image"
                    android:background="@drawable/share"/>
                <TextView
                    style="@style/Chanel_Small_Text"
                    android:text="分享"/>
                <TextView
                    style="@style/Chanel_Small_Text"
                    android:text="(240)" />
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/view_line"
            android:layout_marginRight="15dp"></View>
    </LinearLayout>
</LinearLayout>