<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--头像-->
    <com.boyuanitsm.zhetengba.view.CircleImageView
        android:id="@+id/iv_ch_head"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <!--昵称-->
    <TextView
        android:id="@+id/tv_ch_niName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="#666666"
        android:textSize="14sp" />

    <!--性别-->
    <ImageView
        android:id="@+id/iv_ch_gendar"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--时间-->
        <TextView
            android:gravity="right"
            android:id="@+id/tv_time"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>
    <LinearLayout
        android:layout_marginLeft="65dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--圈子内容-->
            <TextView
                android:id="@+id/tv_content"
                android:layout_weight="1"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--圈子-->
            <TextView
                android:id="@+id/tv_cir_name"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#fff"
                android:background="@drawable/bg_circle_stroke_red"
                android:layout_width="60dp"
                android:layout_height="18dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llphoto"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.boyuanitsm.zhetengba.view.MyGridView
                android:visibility="gone"
                android:id="@+id/iv_ch_image"
                android:paddingBottom="3dp"
                android:horizontalSpacing="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_two"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_two_one"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:layout_width="83dp"
                        android:layout_height="83dp" />
                    <ImageView
                        android:layout_marginLeft="3dp"
                        android:id="@+id/iv_two_two"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:layout_width="83dp"
                        android:layout_height="83dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_two_three"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:layout_width="83dp"
                        android:layout_height="83dp" />
                    <ImageView
                        android:layout_marginLeft="3dp"
                        android:id="@+id/iv_two_four"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:layout_width="83dp"
                        android:layout_height="83dp" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_oneimage"
                android:layout_width="130dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/like"
           android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/act_layer_right">
            <ImageView
                android:id="@+id/zimg"
                style="@style/Chanel_Small_Image"
                android:background="@drawable/zan"/>
            <TextView
                style="@style/Chanel_Small_Text"
                android:text="赞"/>
            <TextView
                android:id="@+id/znum"
                style="@style/Chanel_Small_Text" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_comment"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/act_layer_right">
            <ImageView
                style="@style/Chanel_Small_Image"
                android:background="@drawable/comment"/>
            <TextView
                style="@style/Chanel_Small_Text"
                android:text="评论"/>
            <TextView
                android:id="@+id/cnum"
                style="@style/Chanel_Small_Text" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_share"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                style="@style/Chanel_Small_Image"
                android:background="@drawable/share"/>
            <TextView
                style="@style/Chanel_Small_Text"
                android:text="分享"/>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/view_line"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"></View>
</LinearLayout>