<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#52c791"
            android:text="活动详情："/>
        <TextView
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.5"
            android:id="@+id/act_dialog_message"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="星期天，天气不错，我们一起去吃烧烤吧。同意的请举手。《周末野炊》"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <Button
                android:padding="5dp"
                android:id="@+id/bt_act_dialog_one"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#fff"
                android:textSize="13sp"
                android:text="你们两个是同事"
                android:background="@drawable/bg_circle_stroke_red"/>
            <Button
                android:id="@+id/bt_act_dialog_two"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#fff"
                android:textSize="13sp"
                android:text="共参加过2次活动"
                android:background="@drawable/bg_circle_stroke_green"/>
        </LinearLayout>
    </LinearLayout>
<ImageView
    android:layout_alignParentRight="true"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/cancel"/>
</RelativeLayout>