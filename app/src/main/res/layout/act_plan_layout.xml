<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6ededed">
    <LinearLayout
        android:id="@+id/ll_cancel"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp" >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/x"/>
        </LinearLayout>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:paddingBottom="60dp"
        android:layout_above="@+id/ll_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_plan_act"
            android:gravity="center"
            android:background="@drawable/tv_cir_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="活动"/>
        <TextView
            android:id="@+id/tv_plan_calen"
            android:layout_marginLeft="62dp"
            android:gravity="center"
            android:background="@drawable/tv_cir_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="档期"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="266dp"
            android:layout_height="81dp"
            android:background="@drawable/slogen"/>

    </LinearLayout>
</RelativeLayout>