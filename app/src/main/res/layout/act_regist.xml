<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include layout="@layout/title_act_layout"></include>

<LinearLayout
    android:layout_marginLeft="15dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="65dp">
    <TextView
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textSize="16sp"
        android:text="手机号"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <EditText
        android:id="@+id/et_phone"
        android:textColorHint="#cdcdcd"
        android:textSize="14sp"
        android:textColor="#333333"
       android:layout_marginLeft="10dp"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:inputType="number"
        android:maxLength="11"
        />
</LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:background="#dcdcde"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_marginRight="25dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:inputType="number"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/et_yzm"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="@null"

            />

        <TextView
            android:background="@drawable/yzm_btn"
            android:id="@+id/tv_code"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/com_btn_nor"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:background="#dcdcde"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="设置密码"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_pwd"
            android:inputType="textPassword"
            android:maxLength="24"
            android:textColorHint="#cdcdcd"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            android:hint="   4-24位字母或数字"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:singleLine="true"
            />
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:background="#dcdcde"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="确认密码"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_cpwd"
            android:inputType="textPassword"
            android:maxLength="24"
            android:textColorHint="#cdcdcd"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            android:hint="   4-24位字母或数字"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:singleLine="true"
            />
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:background="#dcdcde"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <CheckBox
        android:layout_gravity="center_vertical"
        android:button="@null"
        android:background="@drawable/check_box"
        android:layout_width="10dp"
        android:layout_height="10dp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="#999999"
            android:text="用户协议"
            style="@style/tv_second"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_zc"
        style="@style/com_dybtn"
        android:layout_marginTop="15dp"
        android:text="注册"
        />


</LinearLayout>