<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_act_layout"></include>

<LinearLayout
    android:layout_marginLeft="15dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="65dp">
    <TextView
        android:textColor="#333333"
        android:textSize="16sp"
        android:text="手机号"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:paddingLeft="30dp"
        android:textColorHint="#cdcdcd"
        android:paddingBottom="15dp"
        android:gravity="bottom"
        android:textSize="14sp"
        android:textColor="#333333"
       android:layout_marginLeft="10dp"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:inputType="number"
        android:maxLength="11"
        android:singleLine="true"
        />
</LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:background="#dcdcde"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_marginRight="25dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:paddingLeft="30dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="15dp"
            android:gravity="bottom"
            android:id="@+id/forgetpwd_code"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="@null"

            />

        <TextView
            android:background="@drawable/yzm_btn"
            android:padding="5dp"
            android:id="@+id/code_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="发送验证码"
            android:textColor="@color/com_btn_nor"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:background="#dcdcde"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="设置密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:maxLength="24"
            android:paddingLeft="30dp"
            android:textColorHint="#cdcdcd"
            android:paddingBottom="15dp"
            android:gravity="bottom"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            android:hint="4-24位字母或数字"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:singleLine="true"
            />
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:background="#dcdcde"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="确认密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:maxLength="24"
            android:paddingLeft="30dp"
            android:textColorHint="#cdcdcd"
            android:paddingBottom="15dp"
            android:gravity="bottom"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            android:hint="4-24位字母或数字"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:singleLine="true"
            />
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:background="#dcdcde"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <CheckBox
        android:paddingLeft="5dp"
        android:textColor="#cdcdcd"
        android:text="用户协议"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/com_dybtn_select"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:text="注册"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


</LinearLayout>