<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/rl_hy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_list_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingStart="15dp">

                <!--点击显示个人信息-->
                <LinearLayout
                    android:id="@+id/ll_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.boyuanitsm.zhetengba.view.CircleImageView
                        android:id="@+id/iv_headphoto"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <!--昵称-->
                    <TextView
                        android:text="hahhhhhhh"
                        android:id="@+id/tv_niName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:textColor="#5fa67d"
                        android:textSize="12sp" />

                    <!--性别-->
                    <ImageView
                        android:id="@+id/iv_gender"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_show"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_show2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="55dp">

                <!--活动主题-->
                <TextView
                    android:id="@+id/tv_hdtheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/one_color"
                    android:textSize="14sp" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/ll_show3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingTop="10dp"
                    android:id="@+id/ll_theme_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/location" />

                    <!--活动地点-->
                    <TextView
                        android:text="上海市徐汇区徐家汇"
                        android:id="@+id/tv_loaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:textColor="@color/simple_item_loaction"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_below="@id/ll_theme_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/time" />

                    <!--活动时间-->
                    <TextView
                        android:text="11月17日18:30-11月17日18:30"
                        android:id="@+id/tv_date"
                        style="@style/MainAct_simple_Text"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp" />
                </LinearLayout>


                <!--</LinearLayout>-->
                <!--</FrameLayout>-->
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:id="@+id/ll_guanzhu"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_simple_guanzhu"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/collect" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/act_layer_right">


                    <LinearLayout
                        android:id="@+id/ll_yaoqin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="50dp"
                        >

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/yaoqing" />

                        <TextView
                            style="@style/MainAct_simple_Text"
                            android:paddingLeft="10dp"
                            android:text="邀请" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_del"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="50dp">

                        <ImageView
                            android:id="@+id/iv_simple_del"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/delsimple" />

                        <TextView
                            android:id="@+id/tv_simple_del"
                            style="@style/MainAct_simple_Text"
                            android:paddingLeft="10dp"
                            android:text="删除" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/ll_join"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="30dp"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/iv_join"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/add" />

                        <TextView
                            android:id="@+id/tv_text_jion"
                            style="@style/MainAct_simple_Text"
                            android:paddingLeft="10dp"
                            android:text="参加" />

                        <TextView
                            android:id="@+id/tv_join_num"
                            style="@style/MainAct_simple_Text"
                            android:paddingLeft="12dp"
                            android:text="15" />

                        <TextView
                            style="@style/MainAct_simple_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="/" />

                        <TextView
                            android:id="@+id/tv_join_tal_num"
                            style="@style/MainAct_simple_Text"
                            android:text="15" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_simple_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="30dp">


                        <ImageView
                            android:id="@+id/iv_simple_share"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/simple_share" />

                        <TextView
                            android:id="@+id/tv_simple_share"
                            style="@style/MainAct_simple_Text"
                            android:paddingLeft="10dp"
                            android:text="分享" />

                        <TextView
                            android:id="@+id/tv_cj"
                            style="@style/MainAct_simple_Text"
                            android:paddingLeft="5dp"
                            android:text="3"
                            android:textColor="@color/red_label" />

                        <TextView
                            android:id="@+id/tv_tt"
                            style="@style/MainAct_simple_Text"
                            android:text="/3" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <com.boyuanitsm.zhetengba.view.CircleImageView
            android:id="@+id/iv_actdetial"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_qz"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">
            <!--头像-->
            <com.boyuanitsm.zhetengba.view.CircleImageView
                android:id="@+id/iv_ch_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/userhead"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <!--昵称-->
                    <TextView
                        android:id="@+id/tv_ch_niName"
                        android:text="xiaoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:textColor="@color/main_color"
                        android:textSize="14sp" />

                    <!--性别-->
                    <ImageView
                        android:id="@+id/iv_ch_gendar"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/ll_xia"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <!--时间-->
                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_toLeftOf="@+id/iv_xia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="#b8b8b8"
                                android:textSize="12sp" />
                            <ImageView
                                android:id="@+id/iv_xia"
                                android:layout_marginLeft="5dp"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/xia"/>
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
                <!--圈子-->
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_cir_name"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:text="足球圈"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:background="@drawable/bg_circle_stroke_red"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--圈子内容-->
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llphoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:orientation="vertical">

                <com.boyuanitsm.zhetengba.view.MyGridView
                    android:layout_marginTop="10dp"
                    android:id="@+id/iv_ch_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="3dp"
                    android:paddingBottom="3dp"
                    android:verticalSpacing="3dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_marginLeft="3dp"
                    android:id="@+id/ll_two"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_two_one"
                            android:layout_width="83dp"
                            android:layout_height="83dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/iv_two_two"
                            android:layout_width="83dp"
                            android:layout_height="83dp"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_two_three"
                            android:layout_width="83dp"
                            android:layout_height="83dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/iv_two_four"
                            android:layout_width="83dp"
                            android:layout_height="83dp"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY" />
                    </LinearLayout>
                </LinearLayout>

                <com.boyuanitsm.zhetengba.view.CustomImageView
                    android:visibility="gone"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/iv_oneimage"
                    android:layout_marginTop="10dp"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:background="#ffffff" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="22"
                        android:id="@+id/znum2"
                        style="@style/Chanel_Small_Text" />
                    <TextView
                        android:id="@+id/znumText"
                        style="@style/Chanel_Small_Text"
                        android:text="赞" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:text="22"
                        android:id="@+id/cnum2"
                        style="@style/Chanel_Small_Text" />
                    <TextView
                        android:id="@+id/cnumText"
                        style="@style/Chanel_Small_Text"
                        android:text="评论" />


                </LinearLayout>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_more"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/act_layer_right"
                android:gravity="center">

                <ImageView
                    android:id="@+id/zimg"
                    style="@style/Chanel_Small_Image"
                    android:background="@drawable/zan" />

                <TextView
                    style="@style/Chanel_Small_Text"
                    android:text="赞" />

                <TextView
                    android:id="@+id/znum"
                    style="@style/Chanel_Small_Text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/act_layer_right"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_comment"
                    style="@style/Chanel_Small_Image"
                    android:background="@drawable/comment" />

                <TextView
                    style="@style/Chanel_Small_Text"
                    android:text="评论" />

                <TextView
                    android:id="@+id/cnum"
                    style="@style/Chanel_Small_Text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_share"
                    style="@style/Chanel_Small_Image"
                    android:background="@drawable/share" />

                <TextView
                    style="@style/Chanel_Small_Text"
                    android:text="分享" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/view_line"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"></View>
    </LinearLayout>
</LinearLayout>