<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/rl_dq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/layer_list_bottom"
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <!--头像-->
                <com.boyuanitsm.zhetengba.view.CircleImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/mine_head" />

                <!--昵称-->
                <TextView
                    android:id="@+id/tv_Name"
                    style="@style/MainAct_simple_cale_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_icon"
                    android:text="无名" />

                <ImageView
                    android:id="@+id/iv_gen"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_Name"
                    android:background="@drawable/male" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="70dp"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rdbt_bw_check"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="12sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingLeft="55dp">

                <LinearLayout
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/time" />

                            <TextView
                                android:id="@+id/tv_time_cal"
                                style="@style/MainAct_simple_Text"
                                android:paddingLeft="5dp"
                                android:text="3月10日17：00-20：00" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--原来写的全部隐藏最好不要删掉，因为删掉后可能有写控件找不到而报错-->
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/rl_main"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_guanzhu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/act_layer_right"
                android:paddingLeft="55dp">

                <LinearLayout
                    android:id="@+id/ll_cal_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_cal_guanzhu"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/collect_b" />

                    <TextView
                        android:id="@+id/tv_cal_text_guanzhu"
                        style="@style/MainAct_simple_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="关注" />

                    <TextView
                        android:id="@+id/tv_gzcal_num"
                        style="@style/MainAct_simple_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_guanzhu_del"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/act_layer_right"
                android:paddingLeft="55dp">

                <LinearLayout
                    android:id="@+id/ll_cal_guanzhu_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_cal_guanzhu_del"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/delsimple" />

                    <TextView
                        android:id="@+id/tv_cal_text_guanzhu_del"
                        style="@style/MainAct_simple_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="删除" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_yue_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="50dp">

                <LinearLayout
                    android:id="@+id/ll_yh_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_cal_yh_share"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/simple_share" />

                    <TextView
                        android:id="@+id/tv_cal_yh_share"
                        style="@style/MainAct_simple_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="分享" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_yue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/ll_yh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_cal_yh"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/bottom_picchange_finger" />

                    <TextView
                        android:id="@+id/tv_cal_yh"
                        style="@style/MainAct_simple_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="约Ta" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_bag"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_qz"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">
            <!--头像-->
            <com.boyuanitsm.zhetengba.view.CircleImageView
                android:id="@+id/iv_ch_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/userhead"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <!--昵称-->
                    <TextView
                        android:id="@+id/tv_ch_niName"
                        android:text="xiaoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:textColor="@color/main_color"
                        android:textSize="14sp" />

                    <!--性别-->
                    <ImageView
                        android:id="@+id/iv_ch_gendar"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/ll_xia"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <!--时间-->
                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_toLeftOf="@+id/iv_xia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="#b8b8b8"
                                android:textSize="12sp" />
                            <ImageView
                                android:id="@+id/iv_xia"
                                android:layout_marginLeft="5dp"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/xia"/>
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
                <!--圈子-->
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_cir_name"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:text="足球圈"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:background="@drawable/bg_circle_stroke_red"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--圈子内容-->
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llphoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:orientation="vertical">

                <com.boyuanitsm.zhetengba.view.MyGridView
                    android:layout_marginTop="10dp"
                    android:id="@+id/iv_ch_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="3dp"
                    android:paddingBottom="3dp"
                    android:verticalSpacing="3dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_marginLeft="3dp"
                    android:id="@+id/ll_two"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_two_one"
                            android:layout_width="83dp"
                            android:layout_height="83dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/iv_two_two"
                            android:layout_width="83dp"
                            android:layout_height="83dp"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_two_three"
                            android:layout_width="83dp"
                            android:layout_height="83dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/iv_two_four"
                            android:layout_width="83dp"
                            android:layout_height="83dp"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY" />
                    </LinearLayout>
                </LinearLayout>

                <com.boyuanitsm.zhetengba.view.CustomImageView
                    android:visibility="gone"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/iv_oneimage"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="22"
                        android:id="@+id/znum2"
                        style="@style/Chanel_Small_Text" />
                    <TextView
                        android:id="@+id/znumText"
                        style="@style/Chanel_Small_Text"
                        android:text="赞" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:text="22"
                        android:id="@+id/cnum2"
                        style="@style/Chanel_Small_Text" />
                    <TextView
                        android:id="@+id/cnumText"
                        style="@style/Chanel_Small_Text"
                        android:text="评论" />


                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/act_layer_right"
                android:gravity="center">

                <ImageView
                    android:id="@+id/zimg"
                    style="@style/Chanel_Small_Image"
                    android:background="@drawable/zan" />

                <TextView
                    style="@style/Chanel_Small_Text"
                    android:text="赞" />

                <TextView
                    android:id="@+id/znum"
                    style="@style/Chanel_Small_Text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/act_layer_right"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_comment"
                    style="@style/Chanel_Small_Image"
                    android:background="@drawable/comment" />

                <TextView
                    style="@style/Chanel_Small_Text"
                    android:text="评论" />

                <TextView
                    android:id="@+id/cnum"
                    style="@style/Chanel_Small_Text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_share"
                    style="@style/Chanel_Small_Image"
                    android:background="@drawable/share" />

                <TextView
                    style="@style/Chanel_Small_Text"
                    android:text="分享" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/view_line"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"></View>
    </LinearLayout>
</LinearLayout>