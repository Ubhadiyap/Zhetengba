<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/title_act_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的状态"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (请选择一个标签)"
                android:textColor="#999999"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="77dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="#666666"
                android:id="@+id/tv_xlwu"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:background="@drawable/rdbt_xl_nocheck"
                android:gravity="center"
                android:text="闲来无事"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_bwln"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:layout_marginLeft="27dp"
                android:background="@drawable/rdbt_bw_nocheck"
                android:gravity="center"
                android:text="百无聊赖"
                android:textColor="#666666"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="150dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wuzj"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:background="@drawable/rdbt_wl_nocheck"
                android:gravity="center"
                android:text="无聊至极"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_xdys"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:layout_marginLeft="27dp"
                android:background="@drawable/rdbt_ys_nocheck"
                android:gravity="center"
                android:text="闲的要死"
                android:textColor="#666666"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingBottom="15dp">

            <RelativeLayout
               android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp">

            <EditText
                android:id="@+id/cet_start"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/white_hui_edito"
                android:hint="开始时间"
                android:textColor="#333333"
                android:textColorHint="#cdcdcd"
                android:textCursorDrawable="@color/white"
                android:textSize="12sp" />

                <View
                    android:id="@+id/view_start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></View>
            </RelativeLayout>

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/date"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center" />

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp">

                <EditText
                    android:id="@+id/cet_end"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/white_hui_edito"
                    android:hint="结束时间"
                    android:textColor="#333333"
                    android:textColorHint="#cdcdcd"
                    android:textCursorDrawable="@color/white"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/view_end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></View>
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <com.boyuanitsm.zhetengba.view.CommonView
            android:id="@+id/ll_hu_can"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/item_back"
            app:desText="指定谁看"
            app:desTextColor="#333333"
            app:desTextSize="14sp"
            app:isShowCategoryImage="false"></com.boyuanitsm.zhetengba.view.CommonView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="#e1e1e1"></View>


        <com.boyuanitsm.zhetengba.view.CommonView
            android:id="@+id/ll_hu_no_can"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/item_back"
            app:desText="不让谁看"
            app:desTextColor="#333333"
            app:desTextSize="14sp"
            app:isShowCategoryImage="false"></com.boyuanitsm.zhetengba.view.CommonView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="#e1e1e1"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="仅好友可见"
                android:textColor="#333333"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_button"
                android:layout_width="42dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/switch_off"/>

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_plane"
        style="@style/com_button"
        android:layout_marginTop="15dp"
        android:text="发布" />


</LinearLayout>