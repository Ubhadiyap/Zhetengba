<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/main_color">

    <!--<LinearLayout-->
        <!--android:id="@+id/ll_title_border"-->
        <!-- -->
        <!--android:orientation="horizontal"-->
        <!--android:background="@drawable/bg_circle_stroke_yes_white">-->
    <RadioGroup
        android:id="@+id/rg_cir"
        android:orientation="horizontal"
        android:layout_width="136dp"
        android:layout_height="27dp"
        android:layout_centerInParent="true"
        android:gravity="center">
        <RadioButton
            android:id="@+id/rb_chanel"
            style="@style/MainAct_Title_TextView"
            android:text="@string/title_chanel"
            android:clickable="true"
            android:checked="true"
            android:background="@drawable/title_picchange_calen"
            />
        <RadioButton
            style="@style/MainAct_Title_TextView"
            android:id="@+id/rb_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/title_circle"
            android:clickable="true"
            android:background="@drawable/title_picchange_cal"/>
    </RadioGroup>

    <!--</LinearLayout>-->
    <RelativeLayout
        android:layout_marginLeft="59dp"
       android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_quan"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/iv_quan"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/quan"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_newmes"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_newmes"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/news"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>